<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_purplegrad2"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="291dp"
            android:layout_height="220dp" />
        <ImageButton
            android:id="@+id/imageButtonMenu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="false"
            android:background="@drawable/but_menu"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="75dp"
            android:layout_height="80dp" />

        <ImageButton
            android:id="@+id/imageButtonPrev"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_prev" />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        
        <ImageButton
            android:id="@+id/imageButtonPlay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_play"
        />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/imageButtonNext"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_next" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="45dp"
            android:layout_height="90dp" />
        <ImageButton
            android:id="@+id/imageButtonOpen"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_open" />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <!--
        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle002gradientpause01100x100" />
			-->
        <ImageButton
            android:id="@+id/imageButtonStop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_stop" />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/song_list"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>


</LinearLayout>